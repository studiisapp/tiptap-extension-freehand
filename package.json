{
  "name": "tiptap-extension-freehand",
  "version": "1.0.0",
  "packageManager": "pnpm@10.7.1",
  "description": "A TipTap v3 extension to draw freehand on top of your editor (global overlay or block).",
  "author": "studiis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/studiisapp/tiptap-extension-freehand.git"
  },
  "homepage": "https://github.com/studiisapp/tiptap-extension-freehand",
  "bugs": {
    "url": "https://github.com/studiisapp/tiptap-extension-freehand/issues"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "tiptap",
    "tiptap-extension",
    "freehand",
    "drawing",
    "canvas",
    "prosemirror",
    "editor"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup src/index.ts --dts --format esm,cjs --sourcemap",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "dev": "vite --config example/vite.config.ts --open",
    "build:example": "vite build --config example/vite.config.ts",
    "preview:example": "vite preview --config example/vite.config.ts",
    "release": "pnpm run build && bumpp && pnpm -r publish --access public --no-git-checks",
    "release:no-build": "bumpp && pnpm -r publish --access public --no-git-checks --tag next",
    "bump": "bumpp"
  },
  "peerDependencies": {
    "@tiptap/core": "^3.0.0",
    "@tiptap/react": "^3.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@tiptap/starter-kit": {
      "optional": true
    }
  },
  "dependencies": {
    "perfect-freehand": "^1.2.2"
  },
  "devDependencies": {
    "@tiptap/core": "^3.0.0",
    "@tiptap/pm": "^3.0.0",
    "@tiptap/react": "^3.0.0",
    "@tiptap/starter-kit": "^3.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.1.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "@vitejs/plugin-react": "^4.3.4",
    "tsup": "^8.3.0",
    "bumpp": "^10.2.3"
  },
  "publishConfig": {
    "access": "public"
  }
}